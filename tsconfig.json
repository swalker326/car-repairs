{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["DOM", "ES2020"],
		"module": "ES2022",
		"jsx": "react-jsx",
		"strict": true,
		"skipLibCheck": true,
		"isolatedModules": true,
		"resolveJsonModule": true,
		"moduleResolution": "Bundler",
		"useDefineForClassFields": true,
		"baseUrl": ".",
		"paths": {
			"~/*": ["src/*"]
		},
	},
	"include": ["src"]
}
